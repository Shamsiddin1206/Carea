<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MakeAnOrderFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_screen_of_ordering"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/back_from_make_an_order"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/makeorder_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/back_from_make_an_order"
                    app:layout_constraintTop_toTopOf="@id/back_from_make_an_order"
                    app:layout_constraintBottom_toBottomOf="@id/back_from_make_an_order"
                    android:text="Checkout"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/_makeorder_shipping_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/makeorder_title"
                    app:layout_constraintStart_toStartOf="@id/back_from_make_an_order"
                    android:text="Shipping Adress"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/adress_settings_card_makeorder"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/_makeorder_shipping_title"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/forlogos"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_location"
                        android:padding="10dp"
                        android:elevation="10dp"/>
                    <TextView
                        android:id="@+id/main_locationtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Office"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/main_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qo`yliq massiv 2, 24 house, 6"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="35dp"
                        android:textSize="14sp"
                        android:autoSizeMinTextSize="14dp"
                        android:autoSizeMaxTextSize="16sp"
                        tools:targetApi="o" />
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/edit_adress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_edit"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/odertitle_makeorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/adress_settings_card_makeorder"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@id/back_from_make_an_order"
                    android:text="Order"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/orderedcar_details"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/odertitle_makeorder"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="#ECE9E9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp">
                        <ImageView
                            android:id="@+id/order_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bmw_m4_series"
                            android:padding="5dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMW M4 Series"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="22dp"/>
                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$170 000"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="50dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toBottomOf="@id/carname"
                        app:layout_constraintStart_toEndOf="@id/tayoq"
                        android:backgroundTint="#E4E2E2"
                        app:cardCornerRadius="5dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="85dp"
                        app:layout_constraintBottom_toTopOf="@id/narxi">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="new"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/chooseshippingtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose shipping"
                    app:layout_constraintTop_toBottomOf="@id/orderedcar_details"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@id/back_from_make_an_order"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/shipping_details"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@id/chooseshippingtitle"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:id="@+id/mainshipping_image"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/track"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"/>
                    <TextView
                        android:id="@+id/mainshipping_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Shipping type"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="80dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/shipping_next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_next"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/mainshipping_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/shipping_details"
                    app:layout_constraintStart_toStartOf="@id/shipping_details"
                    android:layout_marginTop="30dp"
                    android:text="Amount: "
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/justcar_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/shipping_details"
                    app:layout_constraintTop_toBottomOf="@id/shipping_details"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:text="$170 000"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/justcar_amount"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/shipping_details"
                    android:layout_marginStart="10dp"
                    android:text="Shipping"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/shipping_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/justcar_amount"
                    app:layout_constraintTop_toBottomOf="@id/justcar_amount"
                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/shipping_amount"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/shipping_details"
                    android:layout_marginStart="10dp"
                    android:text="Tax"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tax_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/justcar_amount"
                    app:layout_constraintTop_toBottomOf="@id/shipping_amount"
                    android:layout_marginTop="10dp"
                    android:text="$1000"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tax_amount"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@id/shipping_details"
                    android:layout_marginStart="10dp"
                    android:text="Total"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/justcar_amount"
                    app:layout_constraintTop_toBottomOf="@id/tax_amount"
                    android:layout_marginTop="20dp"
                    android:text="$171 000"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_to_payment"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total_amount"
                    app:cornerRadius="25dp"
                    android:backgroundTint="#BF000000"
                    android:text="Continue to Payment ->"
                    android:textAllCaps="false"
                    android:elevation="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shippingAdressLayout"
        android:visibility="gone">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_from_shipping_adress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/shipping_adress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_from_shipping_adress"
            app:layout_constraintTop_toTopOf="@id/back_from_shipping_adress"
            app:layout_constraintBottom_toBottomOf="@id/back_from_shipping_adress"
            android:text="Shipping Adress"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/back_from_shipping_adress"
            android:layout_marginTop="30dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/shipping_adress_location_home"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/_makeorder_shipping_title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/forlogos"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_location"
                    android:padding="10dp"
                    android:elevation="10dp"/>
                <TextView
                    android:id="@+id/shippingadress_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/shippingadress_homelocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qo`yliq massiv 2, 24 house, 6"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="40dp"
                    android:textSize="14sp"
                    android:autoSizeMinTextSize="14dp"
                    android:autoSizeMaxTextSize="16sp"
                    tools:targetApi="o" />
                <RadioButton
                    android:id="@+id/home_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/shipping_adress_location_office"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/_makeorder_shipping_title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/forlogos"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_location"
                    android:padding="10dp"
                    android:elevation="10dp"/>
                <TextView
                    android:id="@+id/shippingadress_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/shippingadress_officelocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mirzo Ulugbek, Mahtumkuli"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="40dp"
                    android:textSize="14sp"
                    android:autoSizeMinTextSize="14dp"
                    android:autoSizeMaxTextSize="16sp"
                    tools:targetApi="o" />
                <RadioButton
                    android:id="@+id/office_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/shipping_adress_location_parents"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/_makeorder_shipping_title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/forlogos"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_location"
                    android:padding="10dp"
                    android:elevation="10dp"/>
                <TextView
                    android:id="@+id/shippingadress_parents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parents` House"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/shippingadress_parentslocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fayzobod, 9 tor, 16 house"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="40dp"
                    android:textSize="14sp"
                    android:autoSizeMinTextSize="14dp"
                    android:autoSizeMaxTextSize="16sp"
                    tools:targetApi="o" />
                <RadioButton
                    android:id="@+id/parents_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"/>
            </androidx.cardview.widget.CardView>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_choosedlocation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="25dp"
            android:backgroundTint="#BF000000"
            android:text="Apply"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:elevation="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ChooseShippingLayout"
        android:visibility="gone">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_from_shipping_choice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/choose_shipping_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_from_shipping_choice"
            app:layout_constraintTop_toTopOf="@id/back_from_shipping_choice"
            app:layout_constraintBottom_toBottomOf="@id/back_from_shipping_choice"
            android:text="Choose Shipping"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/shipping_truck"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/back_from_shipping_choice"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/track"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/truck_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Truck"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/truck_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/truck_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/shipping_train"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_truck"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/train"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/train_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/train_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/train_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/shipping_plane"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_train"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/plane"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/plane_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plane"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/plane_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/plane_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/shipping_ship"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_plane"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/ship"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/ship_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ship"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/ship_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$300"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="60dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/ship_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_choosedtransport"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="25dp"
            android:backgroundTint="#BF000000"
            android:text="Apply"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:elevation="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/paymentsettings"
        android:layout_width="250dp"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="15dp">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Settings"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your balance: "
            android:textColor="@color/black"
            android:layout_marginTop="90dp"
            android:layout_marginStart="25dp"
            android:textSize="18sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/own_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 000 $"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required amount: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="170dp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/requires_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="170 000 $"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_payment"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/black"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/successfully_done"
        android:layout_width="250dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="15dp"
        android:visibility="gone">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/successfully"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="65dp"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/done_galochka"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/galochka"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"/>
    </androidx.cardview.widget.CardView>
    <View
        android:visibility="gone"
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>