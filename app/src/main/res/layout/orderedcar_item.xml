<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardfororderedcars"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#ECE9E9">
            <ImageView
                android:id="@+id/done_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bmw_m4_series"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/done_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMW M4 Series"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="180dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:backgroundTint="#E4E2E2"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/done_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$170 000"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="85dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/galochka"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardfororderedcars"/>
</androidx.constraintlayout.widget.ConstraintLayout>